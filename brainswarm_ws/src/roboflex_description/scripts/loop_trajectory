#!/usr/bin/env python3
import rclpy
from rclpy.node import Node
from control_msgs.action import FollowJointTrajectory
from trajectory_msgs.msg import JointTrajectoryPoint
from rclpy.action import ActionClient
import time

class TrajectoryLooper(Node):
    def __init__(self):
        super().__init__('trajectory_looper')

        # Create action client
        self.client = ActionClient(
            self,
            FollowJointTrajectory,
            '/arm_controller/follow_joint_trajectory'
        )

        # Joint names
        self.joints = [
            "joint_1",
            "joint_2",
            "joint_3",
            "joint_gripper_body",
        ]

        # Sequence of goals (in order)
        self.goal_sequence = [
            [0.0, 0.0, 0.0, 0.0],  # Goal 1
            [-0.09441300952382893,
             -0.7963595093641908,
             0.0,
             1.0936349999821171e-10],  # Goal 2
            [0.0,
             0.0,
             -0.6927936606275393,
             1.0936349999821171e-10], # Goal 3
            [-1.3402396294197603,
             0.22903949133725454,
             3.4267734497783e-10,
             2.610569519510207e-11],  # Goal 4
            [-1.5699999999954355,
             -0.6728571701935253,
             5.2757556079762505e-11,
             -1.9743043833285376e-06],  # Goal 5
            [0.0, 0.0, 0.0, 0.0],  # Back to zero
        ]

    def send_goal(self, positions):
        goal = FollowJointTrajectory.Goal()
        goal.trajectory.joint_names = self.joints

        point = JointTrajectoryPoint()
        point.positions = positions
        point.time_from_start.sec = 2  # motion duration
        goal.trajectory.points.append(point)

        self.get_logger().info(f"Sending goal: {positions}")
        return self.client.send_goal_async(goal)

    def loop(self):
        self.client.wait_for_server()
        self.get_logger().info("Action server available! Starting trajectory loop.")

        while rclpy.ok():
            for positions in self.goal_sequence:

                # Send goal
                send_future = self.send_goal(positions)
                rclpy.spin_until_future_complete(self, send_future)
                goal_handle = send_future.result()

                if not goal_handle.accepted:
                    self.get_logger().error("Goal was rejected!")
                    continue

                # Wait for result
                result_future = goal_handle.get_result_async()
                rclpy.spin_until_future_complete(self, result_future)

                self.get_logger().info("Goal completed.\n")
                time.sleep(1)


def main():
    rclpy.init()
    node = TrajectoryLooper()
    try:
        node.loop()
    except KeyboardInterrupt:
        pass
    node.destroy_node()
    rclpy.shutdown()


if __name__ == "__main__":
    main()
